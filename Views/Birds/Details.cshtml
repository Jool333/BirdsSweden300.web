@model BirdsSweden300.web.ViewModel.Birds.BirdDetailsViewModel

<article class="page">
    <section class="bird-detail-container"> </section>
    <div class="bird-detail">
        <span class="back-icon">
            <a asp-action="index"><span><i class="fa-regular fa-arrow-left-long"></i> Tillbaka</span></a>
        </span>
        <h2 class="bird-detail-header">@Model.Name - @Model.Species</h2>
        <img src="@Model.ImageUrl" alt="Model.Model">
        <div class="bird-detail-info">
            <span><strong>Art</strong></span>
            <span>@Model.Name</span>
        </div>
        <h4>Beskrivning</h4>
        <div>@Model.Description</div>
    </div>  
</article>